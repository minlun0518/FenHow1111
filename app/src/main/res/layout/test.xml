<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroupHosp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/radioButtonDrList01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:text="總院"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonDrListS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:checked="false"
                android:text="XX分院"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">

            <Spinner
                android:id="@+id/spinnerDrListDept"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/gradient_spinner_orange_600"
                android:popupBackground="@color/colorGrey700"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/buttonDrListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="--/--/--"
                android:textSize="16sp"
                android:theme="@style/ButtonOrange600" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>